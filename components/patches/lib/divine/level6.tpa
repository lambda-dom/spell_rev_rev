//Dolorous Decay.
DEFINE_PATCH_FUNCTION CLERIC_DOLOROUS_DECAY
BEGIN
    LPF ALTER_SPELL_EFFECT INT_VAR
        match_opcode = 215              //Play visual effect.
        savebonus = 0 - 4
    END
    LPF ALTER_EFFECT INT_VAR
        match_opcode = 78               //Disease.
        match_parameter2 = 2            //Damage per second.
        parameter1 = 1                  //2 -> 1.
    END
    LPF ALTER_SPELL_EFFECT INT_VAR
        match_opcode = 215              //Play visual effect.
        timing = 1
    END
END

