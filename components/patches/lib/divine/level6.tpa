//Divine spell patches: level 6.
//Aerial Servant.
DEFINE_PATCH_FUNCTION CLERIC_AERIAL_SERVANT
BEGIN
    TEXT_SPRINT res "spserv"
    INNER_ACTION BEGIN
        COPY_EXISTING ~%res%.eff~ ~override~
            //power 6 -> 0.
            WRITE_LONG $EFFECT_OFFSETS("power") 0
        BUT_ONLY
    END
END

