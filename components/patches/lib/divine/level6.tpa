        match_parameter1 = 20
    END
    TEXT_SPRINT res "dvbanish"
    INNER_ACTION BEGIN
        COPY_EXISTING ~%res%.spl~ ~override~
            LPF DELETE_EFFECT INT_VAR
                match_opcode = 177          //Use Eff.
                match_parameter1 = 20
            END
    END
END

